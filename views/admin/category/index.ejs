<html>
    <head>
        <title></title>
    </head>
    <body>
        <form action="/admin/category/create" method="POST">
            <label>Add new Category</label>
            <input type="text" name="category_name" placeholder="Category Name">
            <input type="submit" value= "add">
        </form>
        <table border="1px">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Created At</th>
                <th>Updated At</th>
                <th>Action</th>
            </tr>
            <% for(let i in result) { %>
                <tr>
                    <td><%= +i+1 %></td>
                    <td><%= result[i].category_name %></td>
                    <td><%= result[i].createdAt %></td>
                    <td><%= result[i].updatedAt %></td>
                    <td><a href="/admin/category/delete/<%= result[i].id %>">Delete</a></td>
                </tr>
            <% } %>
        </table>
    </body>
</html>